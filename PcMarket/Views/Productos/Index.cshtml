@model IEnumerable<PcMarket.Models.Producto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Productos</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Productos" asp-action="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> Crear Nuevo Producto</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr class="text-center">
                    <th>
                        Nombre Producto
                    </th>
                    <th>
                        Precio
                    </th>
                    <th>
                        Stock
                    </th>
                    <th>
                        Descripción
                    </th>
                    <th>
                        Categoria
                    </th>

                    <th>
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.Name</th>
                        <th>@item.Price</th>
                        <th>@item.Quantity</th>
                        <th>@item.ShortDescription</th>
                        <th>@item.Categoria.Name</th>
                        
                        <th class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Productos" asp-action="upsert" asp-route-Id="@item.Id" class="btn btn-primary mx-2"><i class="fa-regular fa-pen-to-square"></i></a>
                                <a asp-controller="Productos" asp-action="Eliminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2"><i class="fas fa-trash-alt"></i></a>
                            </div>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay registros de Productos</p>
    }
</div>

