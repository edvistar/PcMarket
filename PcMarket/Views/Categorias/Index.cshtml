@model IEnumerable<PcMarket.Models.Categoria>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Categorias</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categorias" asp-action="Crear" class="btn btn-primary"><i class="fas fa-plus"></i>Nueva Categoria</a>
        </div>
    </div>
    <br />
   <div class="row">
        <div class="col-6 offset-3">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="100%">
                    <thead>
                        <tr class="text-center">
                            <th>Nombre Categoria</th>
                            <th>Acciones</th>
                        </tr>
                        
                    <th></th>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th width="50%">@item.Name</th>
                                <th class="text-center">
                                    <div class="w-40 btn-group" role="group">
                                        <a asp-controller="Categorias" asp-action="Editar" asp-route-Id="@item.Id" class="btn btn-primary mx-2"><i class="fa-regular fa-pen-to-square"></i></a>
                                        <a asp-controller="Categorias" asp-action="ELiminar" asp-route-Id="@item.Id" class="btn btn-danger mx-2"><i class="fas fa-trash-alt"></i></a>
                                    </div>
                                </th>
                            </tr>

                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No se encontraron Categorias</p>
            }
        </div>
   </div>
</div>

