@model PcMarket.Models.Producto
<div class="col-lg-3 col-md-3 pb-4 filter @Model.Categoria.Name.Replace(' ','_')">
	<div class="card bg-white rounded shadow-sm" style="border:3px solid #33332E">
	@if(@Model.TieneDescuento == true){
		<div class="col-6 p-2">
			<span class="badge p-2 border w-95 text-dark" style="background-color:lavenderblush">@Model.Descuento %</span>
		</div>
	}else{
			<div class="col-6 p-2">
				<span class="badge p-2 border w-95 text-white" style="visibility:hidden">@Model.Descuento %</span>
			</div>
	}
		
	<!-- Product image-->
	<img class="card-img-top" src="@WC.ImagenRuta@Model.ImageUrl" alt="Imagen Card" />
	<!-- Product details-->
	<div class="card-body p-4">
		<div class="text-center">
			<!-- Product name-->

			<h5 class="fw-bolder">@Model.Name</h5>
			<!-- Product reviews-->
			<!-- Product price-->
			 @Model.Price.ToString("c")

		</div>
	</div>
	<!-- Product actions-->
		<div class="card-footer pt-0 border-top-0 bg-transparent">
			<div class="text-center">
				<a asp-action="Detalle" asp-route-Id="@Model.Id" class="btn form-control btn-sm p-2" style="background-color:#F5B041; height:40px; border:2px solid #E74C3C">Ver Detalle</a>
			</div>
		</div>
	</div>
</div>