@model IEnumerable<PcMarket.Models.UsuarioAplicacion>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Usuarios</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-plus"></i>Crear Nuevo Usuario</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr>
                    <th>
                        Nombre Completo
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Numero de telefono
                    </th>
                    <th>
                        Rol
                    </th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.NombreCompleto</th>
                        <th>@item.Email</th>
                        <th>@item.PhoneNumber</th>
                        <th>@item.Role</th>
                        
                        

                        <th class="text-center">
                            
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay registros de Productos</p>
    }
</div>

























